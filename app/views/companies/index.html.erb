<div class="search headit">
  Search:
  <%= form_tag companies_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
</div>

<table>
  <tr>
    <th class="headit">Id</th>
    <th class="headit">Name</th>
    <th colspan="3"><%= link_to 'New Company', new_company_path %></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td class="indext"><%= company.id %></td>
    <td class="indext"><%= company.name %></td>
    <td class="indextl"><%= link_to 'Show', company %></td>
    <td class="indextl"><%= link_to 'Edit', edit_company_path(company) %></td>
    <td class="indextl"><%= link_to 'Destroy', company, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />


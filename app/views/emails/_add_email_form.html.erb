<div id="showMe1" class="showMe">
<h3>Add an email:</h3>
<%= form_for([@company, @company.emails.build]) do |e| %>
  <div class="field">
    <%= e.label :email %><br />
    <%= e.text_field :email %>
    <%= error_messages_for :email %>
  </div>
  <div class="actions">
    <%= e.submit %>
  </div>
<% end %>
</div>
